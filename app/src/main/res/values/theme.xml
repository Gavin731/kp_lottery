<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Theme.Base" parent="android:Theme.Light">
        <item name="android:drawingCacheQuality">auto</item>
    </style>
    
    <style name="Theme.Columbus" parent="Theme.Base">
        <item name="android:windowTitleSize">@dimen/titlebar_height</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Theme.ColumbusNoTitle" parent="Theme.Columbus">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
